@model IEnumerable<AppRole>

<a asp-action="Create" class="btn btn-primary" >Create Role</a>
<hr>


<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Kullanıcılar</th>
            <th style="width: 125px;"></th>
        </tr>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Role Yok</td>
            </tr>
        }

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>Kullanıcı Listesi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

    </thead>
    <tbody>

    </tbody>